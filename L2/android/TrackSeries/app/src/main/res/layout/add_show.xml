<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content">

    <Button
            android:text="Cancel"
            android:layout_width="116dp"
            android:layout_height="50dp"
            android:id="@+id/btn_cancel"
            app:layout_constraintTop_toBottomOf="@+id/rating_edit"
            app:layout_constraintStart_toStartOf="@+id/rating_edit"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <Button
            android:text="Add"
            android:layout_width="117dp"
            android:layout_height="50dp"
            android:id="@+id/btn_add"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/rating_edit"
            app:layout_constraintEnd_toEndOf="@+id/rating_edit"
            app:layout_constraintStart_toEndOf="@+id/btn_cancel"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <EditText
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Producer"
            android:ems="10"
            android:id="@+id/txt_producer"
            app:layout_constraintStart_toStartOf="@+id/txt_name" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_name"/>
    <EditText
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Description"
            android:ems="10"
            android:id="@+id/txt_description"
            app:layout_constraintStart_toStartOf="@+id/txt_producer" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_producer"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/txt_producer" android:layout_marginRight="8dp"/>
    <EditText
            android:layout_width="266dp"
            android:layout_height="44dp"
            android:inputType="textPersonName"
            android:hint="Title"
            android:ems="10"
            android:id="@+id/txt_name"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/lbl_add_show" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="24dp"
            android:layout_marginStart="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp"/>
    <TextView
            android:text="Add a show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbl_add_show"
            tools:textSize="36sp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txt_name"/>
    <EditText
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Rating"
            android:ems="10"
            android:id="@+id/rating_edit" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_description" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.466"/>
</android.support.constraint.ConstraintLayout>