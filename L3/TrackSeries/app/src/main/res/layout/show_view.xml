<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"

        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:padding="3dp"
        card_view:cardElevation="2dp"
        card_view:cardMaxElevation="2dp"
        card_view:cardBackgroundColor="@color/view_color"
        card_view:cardCornerRadius="5dp"
        card_view:contentPadding="5dp"
>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:padding="5dp"
                android:text="Title"
                android:singleLine="false"
                android:layout_toLeftOf="@id/rating"
                android:textColor="@color/white"
                android:textSize="16dp" android:layout_alignParentStart="true" android:layout_centerVertical="true"
                android:layout_marginStart="11dp" android:layout_alignParentLeft="true"
                android:layout_marginLeft="11dp"/>

        <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginRight="25dp"
                android:layout_toLeftOf="@id/btnEdit"
                android:text="Rating: 0"
                android:textColor="@color/white"
                android:padding="5dp" android:layout_centerVertical="true"/>

        <TextView
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:drawableLeft="@android:drawable/ic_delete"
                android:padding="5dp" android:layout_centerVertical="true" android:layout_marginRight="4dp"/>

        <TextView
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@id/btnDelete"
                android:drawableLeft="@drawable/ic_edit"
                android:padding="5dp" android:layout_centerVertical="true"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>